{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "alwaysStrict": true,
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES6",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["./src/**/*"]
}
